{
  "openapi": "3.0.0",
  "info": {
    "description": "This is the heatmap server.  You can find out more about     Swagger at [http://swagger.io](http://swagger.io) or on [irc.freenode.net, #swagger](http://swagger.io/irc/).",
    "version": "1.0.0",
    "title": "Heatmap",
    "termsOfService": "http://swagger.io/terms/",
    "contact": {
      "email": "info@disit.org"
    },

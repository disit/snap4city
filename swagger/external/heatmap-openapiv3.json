    }
  },
  "paths": {
    "/data/{mapName}/{metricName}/{date}/{clustered}": {
      "get": {
        "summary": "Get heatmap data",
        "description": "Returns heatmap data",
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/DataOutput"
                }
              }
            }
          },
          "400": {
            "description": "Invalid parameters supplied"
          },
          "404": {
            "description": "Resource not found"
          }
        }
      },
      "parameters": [
        {
          "name": "mapName",
          "in": "path",
          "required": true,
          "description": "The map name",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "metricName",
          "in": "path",
          "required": true,
          "description": "The metric's name",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "date",
          "in": "path",
          "required": true,
          "description": "The date",
          "example": "2019-01-01T00:00:00.000Z",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "clustered",
          "in": "path",
          "required": true,
          "description": "Specify whether the heatmap data is clustered (1) or not (0)",
          "schema": {
            "type": "integer",
            "enum": [
              0,
              1
            ]
          }
        }
      ]
    },
    "/list": {
      "get": {
        "summary": "Get the maps' list",
        "description": "Returns the maps' list",
        "responses": {
          "200": {
            "description": "Status 200",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/List"
                }
              }
            }
          }
        }
      }
    },
    "/dataTime/{mapName}/{metricName}/{limit}/{clustered}": {
      "get": {
        "summary": "Get map's timestamps",
        "description": "Return the timestamps of a map",
        "responses": {
          "200": {
            "description": "Status 200",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/List"
                }
              }
            }
          }
        }
      },
      "parameters": [
        {
          "name": "mapName",
          "in": "path",
          "required": true,
          "description": "The map’s name",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "metricName",
          "in": "path",
          "required": true,
          "description": "The metric's name",
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "limit",
          "in": "path",
          "required": true,
          "description": "The results’ limit",
          "schema": {
            "type": "number",
            "format": "int64"
          }
        },
        {
          "name": "clustered",
          "in": "path",
          "required": true,
          "description": "Specify whether the heatmap data is clustered (1) or not (0)",
          "example": "0",
          "schema": {
            "type": "string"
          }
        }
      ]
    },
    "/insert": {
      "post": {
        "summary": "Insert",
        "description": "Insert a map",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/DataInput"
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Status 200"
          }
        }
      }
    },
    "/insertArray": {
      "post": {
        "summary": "insertArray",
        "description": "Insert a maps' array",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/DataInput"
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "Status 200"
          }
        }
      }
    },
    "/interp.php": {
      "get": {
        "summary": "Get the interpolated value of a metric from location",
        "parameters": [
          {
            "name": "latitude",
            "in": "query",
            "required": true,
            "description": "The location's latitude",
            "example": 43.11,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "longitude",
            "in": "query",
            "required": true,
            "description": "The location's longitude",
            "example": 11.1,
            "schema": {
              "type": "number"
            }
          },
          {
            "name": "dataset",
            "in": "query",
            "required": true,
            "description": "The map's name",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "date",
            "in": "query",
            "required": true,
            "description": "The map's date",
            "example": "2019-01-01T00:00:00.000Z",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Status 200"
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "https://heatmap.snap4city.org/"
    }
  ],
  "components": {
    "schemas": {
      "DataInput": {
        "type": "object",
        "required": [
          "date",
          "latitude",
          "longitude",
          "mapName",
          "value"
        ],
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64",
            "description": "The record's id"
          },
          "mapName": {
            "type": "string",
            "description": "The map's name"
          },
          "latitude": {
            "type": "number",
            "format": "double",
            "description": "The geographic coordinate latitude in decimal format"
          },
          "longitude": {
            "type": "number",
            "format": "double",
            "description": "The geographic coordinate longitude in decimal format"
          },
          "value": {
            "type": "number",
            "format": "double",
            "description": "The value"
          },
          "clustered": {
            "type": "integer",
            "format": "int64",
            "description": "Specify whether the data is clustered (1) or not (0)",
            "default": 0,
            "enum": [
              0,
              1
            ]
          },
          "days": {
            "type": "integer",
            "format": "int64",
            "description": "The number of days in the past since date, considered for this value"
          },
          "date": {
            "type": "string",
            "description": "The value's date",
            "pattern": "YYYY-mm-ddThh:mm:ssZ",
            "example": "2019-01-01T00:00:00.000Z"
          },
          "description": {
            "type": "string",
            "description": "The map's description"
          },
          "metricName": {
            "type": "string",
            "description": "The metric's name"
          }
        },
        "example": "{\n  \"mapName\": \"map\",\n  \"metricName\": \"metric\",\n  \"latitude\":  43.11,\n  \"longitude\": 11.10,\n  \"value\":   100,\n  \"clustered\": 0,\n  \"description\": \"a map test\",\n  \"days\": 0,\n  \"date\": \"2019-01-01T00:00:00Z\"\n}"
      },
      "DataOutput": {
        "type": "object",
        "properties": {
          "data": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "date": {
                  "type": "string",
                  "description": "The date",
                  "pattern": "YYYY-mm-ddThh:mm:ssZ",
                  "example": "2019-01-01T00:00:00.000Z"
                },
                "latitude": {
                  "type": "number",
                  "format": "double",
                  "description": "The geographic coordinate latitude in decimal format"
                },
                "longitude": {
                  "type": "number",
                  "format": "double",
                  "description": "The geographic coordinate longitude in decimal format"
                },
                "value": {
                  "type": "number",
                  "format": "double",
                  "description": "The value"
                }
              }
            }
          },
          "metadata": {
            "type": "object",
            "properties": {
              "clustered": {
                "type": "string",
                "description": "Specify whether the heatmap data is clustered (1) or not (0)",
                "default": "0",
                "enum": [
                  "0",
                  "1"
                ]
              },
              "date": {
                "type": "string",
                "description": "The date",
                "pattern": "YYYY-mm-ddThh:mm:ssZ",
                "example": "2019-01-01T00:00:00.000Z"
              },
              "days": {
                "type": "number",
                "format": "int64",
                "description": "The number of days in the past since date, considered for this value"
              },
              "description": {
                "type": "string",
                "description": "The map’s description"
              },
              "mapName": {
                "type": "string",
                "description": "The map’s name"
              },
              "metricName": {
                "type": "string",
                "description": "The metric's name"
              }
            }
          }
        },
        "description": "The returned maps' data",
        "example": "{\n  \"data\": [\n    {\n      \"date\": \"2019-01-09T14:20:40Z\",\n      \"latitude\": 60.1743,\n      \"longitude\": 24.9806,\n      \"value\": 30.9361\n    },\n    {\n      \"date\": \"2019-01-09T14:20:40Z\",\n      \"latitude\": 60.1964,\n      \"longitude\": 24.952,\n      \"value\": 70.1903\n    }\n  ],\n  \"metadata\": {\n    \"clustered\": \"0\",\n    \"date\": \"2019-01-09T14:20:40Z\",\n    \"days\": \"0\",\n    \"description\": \"Average on 24H\",\n    \"mapName\": \"noiseLAeq\",\n    \"metricName\": \"noiseLAeq\"\n  }\n}"
      },
      "List": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "clustered": {
              "type": "number",
              "format": "int64",
              "description": "Specify whether the heatmap data is clustered (1) or not (0)",
              "enum": [
                0,
                1
              ]
            },
            "date": {
              "type": "string",
              "description": "The date",
              "pattern": "YYYY-mm-ddThh:mm:ssZ",
              "example": "2019-01-01T00:00:00.000Z"
            },
            "days": {
              "type": "number",
              "format": "int64",
              "description": "The number of days in the past since date, considered for this value",
              "default": 0
            },
            "description": {
              "type": "string",
              "description": "The map’s description"
            },
            "mapName": {
              "type": "string",
              "description": "The map's name"
            },
            "metricsName": {
              "type": "string",
              "description": "The metric's name"
            }
          }
        },
        "example": "[\n  {\n    \"clustered\": 0,\n    \"date\": \"2019-01-09T14:11:16Z\",\n    \"days\": 0,\n    \"description\": \"Average on 12H\",\n    \"mapName\": \"noiseLAeq\",\n    \"metricName\": \"noiseLAeq\"\n  },\n  {\n    \"clustered\": 0,\n    \"date\": \"2019-01-09T14:10:40Z\",\n    \"days\": 0,\n    \"description\": \"Average on 12H\",\n    \"mapName\": \"noiseLAeq\",\n    \"metricName\": \"noiseLAeq\"\n  },\n  {\n    \"clustered\": 0,\n    \"date\": \"2019-01-09T14:11:29Z\",\n    \"days\": 0,\n    \"description\": \"Average on 12H\",\n    \"mapName\": \"noiseLAeq\",\n    \"metricName\": \"noiseLAeq\"\n  }\n  ]"
      }
    }
  }
}